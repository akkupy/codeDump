import java.util.Arrays;

public class PancakeSortReversed {
    public static void pancakeSortReversed(int[] arr) {
        int n = arr.length;

        for (int i = 0; i < n; i++) {
            int maxIndex = findMaxIndex(arr, n - i);
            if (maxIndex != n - i - 1) {
                flip(arr, maxIndex + 1);
                flip(arr, n - i);
            }
        }
    }

    public static int findMaxIndex(int[] arr, int n) {
        int maxIndex = 0;
        for (int i = 1; i < n; i++) {
            if (arr[i] > arr[maxIndex]) {
                maxIndex = i;
            }
        }
        return maxIndex;
    }

    public static void flip(int[] arr, int index) {
        int start = 0;
        while (start < index) {
            int temp = arr[start];
            arr[start] = arr[index - start];
            arr[index - start] = temp;
            start++;
        }
    }

    public static void main(String[] args) {
        int[] arr = {64, 34, 25, 12, 22, 11, 90};
        pancakeSortReversed(arr);
        System.out.println("Sorted array (reversed): " + Arrays.toString(arr));
    }
}
